<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rec_chat_list"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/chat_input_more"
            android:src="@drawable/ic_tag_faces_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/chat_input_edit"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />
        <ImageButton
            android:id="@+id/chat_input_file"
            android:src="@drawable/ic_attach_file_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageButton
            android:id="@+id/chat_input_image"
            android:src="@drawable/ic_photo_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageButton
            android:visibility="gone"
            android:id="@+id/chat_input_send"
            android:layout_width="wrap_content"
            android:src="@drawable/ic_menu_send"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>